# ----------------------------------
# SERVER & DATABASE CONFIGURATION
# ----------------------------------

# The port your backend server will run on
PORT=8080

# The MongoDB connection link.
# This link is specifically for running the project with Docker Compose,
# where "mongo" is the name of the database service.
MONGO_URI=mongodb://mongo:27017/helpdesk

# ----------------------------------
# SECURITY CONFIGURATION
# ----------------------------------

# This is a secret key for signing authentication tokens (JWT).
# IMPORTANT: Change this to a long, random, and secret string for security.
JWT_SECRET=your_super_secret_and_long_random_string_here

# ----------------------------------
# AGENT AI CONFIGURATION
# ----------------------------------

# [cite_start]Set to "true" to use the simple keyword-based agent without needing an API key [cite: 100, 168]
# Set to "false" if you want to use a real LLM (like OpenAI)
STUB_MODE=true

# [cite_start]Set to "true" to allow the agent to automatically close tickets [cite: 62, 166]
AUTO_CLOSE_ENABLED=true

# [cite_start]The confidence score (from 0 to 1) the agent needs to auto-resolve a ticket [cite: 62, 167]
CONFIDENCE_THRESHOLD=0.75

# [cite_start]Optional: Add your OpenAI API key here if you set STUB_MODE to "false" [cite: 169]
OPENAI_API_KEY=